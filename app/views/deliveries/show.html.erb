<p style="color: green"><%= notice %></p>

<%= render @delivery %>

<div class="d-flex justify-content-between align-items-center">
  <%= link_to "Edit this delivery", edit_delivery_path(@delivery), class: "btn btn-primary" if current_user.role == "admin"%>
  <%= link_to "Back to deliveries", deliveries_path, class: "btn btn-secondary" %>
  <%= button_to "Destroy this delivery", @delivery, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger", form: { class: "d-inline" } if current_user.role == "admin"%>
</div>
