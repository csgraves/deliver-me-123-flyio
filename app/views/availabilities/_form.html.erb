<%= form_with(model: availability, class: "form-horizontal") do |form| %>
  <% if availability.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(availability.errors.count, "error") %> prohibited this availability from being saved:</h2>

      <ul>
        <% availability.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :start_time, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.datetime_field :start_time, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :end_time, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.datetime_field :end_time, class: "form-control" %>
    </div>
  </div>

  <div class="form-group" style="display: none;">
    <%= form.label :user_id, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.text_field :user_id, readonly: true, value: current_user.id, class: "form-control" %>
    </div>
  </div>

  <div class="form-group mt-3">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>





