<p style="color: green"><%= notice %></p>

<%= render @availability %>

<div class="d-flex justify-content-between align-items-center">
	<%= link_to "Edit this availability", edit_availability_path(@availability), class: "btn btn-primary"%>
	<%= link_to "Back to availabilities", availabilities_path, class: "btn btn-secondary" %>
	<%= button_to "Destroy this availability", @availability, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger", form: { class: "d-inline" } %>
</div>
