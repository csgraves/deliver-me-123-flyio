<p style="color: green"><%= notice %></p>

<%= render @user %>

<div class="d-flex justify-content-between align-items-center">
	<%= link_to "Edit this user", edit_user_path(@user), class: "btn btn-primary" if current_user.role == "admin"%>
		<%= link_to "Back to users", users_path, class: "btn btn-secondary" %>
	<%= button_to "Destroy this user", @user, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger", form: { class: "d-inline" } if current_user.role == "admin"%>

</div>
<div class="text-center">
	<br></br>
	<% if current_user.role == 'admin' %>
	<p>Warning: Destroying this user will delete all associated deliveries!</p>
	<% end %>
</div>
