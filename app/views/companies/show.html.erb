<p style="color: green"><%= notice %></p>

<%= render @company %>
	
<div class="d-flex justify-content-between align-items-center">
  <%= link_to "Edit this company", edit_company_path(@company), class: "btn btn-primary" if current_user.role == "admin"%>
  <%= link_to "Back to companies", companies_path, class: "btn btn-secondary" %>
  <%= button_to "Destroy this company", @company, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger", form: { class: "d-inline" } if current_user.role == "admin"%>
  
</div>
<div class="text-center">
	<br></br>
	<% if current_user.role == 'admin' %>
	  <p>Warning: Destroying this company will delete all associated branches, users and deliveries!</p>
	<% end %>
</div>
