<p style="color: green"><%= notice %></p>

<div class="container mt-4">
    <h1>Join a company</h1>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% @companies.each do |company| %>
                <tr>
                    <td>
                        <%= company.name %>
                    </td>
                    <td>
                        <%= link_to "Join and View Branches", join_company_branches_path(company_id: company.id), class: "btn btn-primary" %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>