<%= form_with(model: branch, class: "form-horizontal") do |form| %>
  <% if branch.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(branch.errors.count, "error") %> prohibited this branch from being saved:</h2>

      <ul>
        <% branch.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div style="display: none;">
    <div class="form-group">
      <%= form.label :branch_iden, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.text_field :branch_iden, class: "form-control" %>
      </div>
    </div>
  </div>

  <div style="display: none;">
    <div class="form-group">
      <%= form.label :company_id, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= text_field_tag :company_iden, form.object.company_iden, class: "form-control", disabled: true, readonly: true %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10 mt-3">
      <%= form.submit "Save", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>